  \setcounter{equation}{\value{qrr@oldsubeq}}%
  \def\theequation{\theparentequation\alph{equation}}%
  \refstepcounter{parentequation}%
  \ignorespaces
}{%
  \setcounter{qrr@oldeq}{\value{parentequation}}%
  \setcounter{qrr@oldsubeq}{\value{equation}}%
